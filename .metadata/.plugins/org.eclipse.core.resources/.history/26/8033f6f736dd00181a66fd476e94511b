package test;


import java.awt.*;  
import java.awt.event.*;  
import javax.swing.*;  
  
public static void main(String[] args) {
	  
    AmritaExam a=new AmritaExam("Online Test Of Java");  

}

class AmritaExam extends JFrame implements ActionListener  
{  
    JLabel l;  
    JRadioButton jb[]=new JRadioButton[5];  
    JButton button1,button2, button3;  
    ButtonGroup bg;  
    int total=0,question=0,x=1,y=1,now=0;  
    int m[] = new int[10];      
    AmritaExam(String s)  
    {  
        super(s);  
        l=new JLabel();  
        add(l);  
        bg=new ButtonGroup();  
        for(int i=0;i<5;i++)  
        {  
            jb[i]=new JRadioButton();     
            add(jb[i]);  
            bg.add(jb[i]);  
        }  
        button1 = new JButton("Next");  
        button2 = new JButton("Bookmark");  
        button3= new JButton("Average");
        button1.addActionListener(this);  
        button2.addActionListener(this);  
        button3.addActionListener(this);  
        add(button1);add(button2);  
        set();  
        l.setBounds(30,40,450,20);  
        jb[0].setBounds(50,80,100,20);  
        jb[1].setBounds(50,110,100,20);  
        jb[2].setBounds(50,140,100,20);  
        jb[3].setBounds(50,170,100,20);  
        button1.setBounds(100,240,100,30);  
        button2.setBounds(350,240,130,30);  
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);  
        setLayout(null);  
        setLocation(250,100);  
        setVisible(true);  
        setSize(600,350);  
    }  
    public void actionPerformed(ActionEvent e)  
    {  
        if(e.getSource()==button1)  
        {  
            if(check())  
                total=total+1;  
            question++;  
            set();    
            if(question==9)  
            {  
                button1.setEnabled(false);  
                button2.setText("Result");  
            }  
        }  
        if(e.getActionCommand().equals("Bookmark"))  
        {  
            JButton bk=new JButton("Bookmark"+x);  
            bk.setBounds(480,20+30*x,100,30);  
            add(bk);  
            bk.addActionListener(this);  
            m[x]=question;  
            x++;  
            question++;  
            set();    
            if(question==9)  
                button2.setText("Result");  
            	button3.setText("Average");
            setVisible(false);  
            setVisible(true);  
        }  
        for(int i=0,y=1;i<x;i++,y++)  
        {  
        if(e.getActionCommand().equals("Bookmark"+y))  
        {  
            if(check())  
                total=total+1;  
            now=question;  
            question=m[y];  
            set();  
            ((JButton)e.getSource()).setEnabled(false);  
            question=now;  
        }  
        }  
      
        if(e.getActionCommand().equals("Result"))  
        {  
            if(check())  
                total=total+1;  
            question++;  
            int average=total/10;  
            JOptionPane.showMessageDialog(this,"All the Very Best Lets See Your Mark Card");
            JOptionPane.showMessageDialog(this,"Total Marks Secured = " + total);  
            JOptionPane.showMessageDialog(this,"Average Marks=" + average);  
            System.exit(0);
        }  
        
    }  
    void set()  
    {  
        jb[4].setSelected(true);  
        if(question==0)  
        {  
            l.setText("Que1: Which one among these is not a primitive datatype?");  
            jb[0].setText("int");jb[1].setText("Float");jb[2].setText("boolean");jb[3].setText("char");   
        }  
        if(question==1)  
        {  
            l.setText("Que2: Which class is available to all the class automatically?");  
            jb[0].setText("Swing");jb[1].setText("Applet");jb[2].setText("Object");jb[3].setText("ActionEvent");  
        }  
        if(question==2)  
        {  
            l.setText("Que3: Which package is directly available to our class without importing it?");  
            jb[0].setText("swing");jb[1].setText("applet");jb[2].setText("net");jb[3].setText("lang");  
        }  
        if(question==3)  
        {  
            l.setText("Que4: String class is defined in which package?");  
            jb[0].setText("lang");jb[1].setText("Swing");jb[2].setText("Applet");jb[3].setText("awt");  
        }  
        if(question==4)  
        {  
            l.setText("Que5: Which institute is best for java coaching?");  
            jb[0].setText("Utek");jb[1].setText("Aptech");jb[2].setText("SSS IT");jb[3].setText("jtek");  
        }  
        if(question==5)  
        {  
            l.setText("Que6: Which one among these is not a keyword?");  
            jb[0].setText("class");jb[1].setText("int");jb[2].setText("get");jb[3].setText("if");  
        }  
        if(question==6)  
        {  
            l.setText("Que7: Which one among these is not a class? ");  
            jb[0].setText("Swing");jb[1].setText("Actionperformed");jb[2].setText("ActionEvent");  
                        jb[3].setText("Button");  
        }  
        if(question==7)  
        {  
            l.setText("Que8: which one among these is not a function of Object class?");  
            jb[0].setText("toString");jb[1].setText("finalize");jb[2].setText("equals");  
                        jb[3].setText("getDocumentBase");         
        }  
        if(question==8)  
        {  
            l.setText("Que9: which function is not present in Applet class?");  
            jb[0].setText("init");jb[1].setText("main");jb[2].setText("start");jb[3].setText("destroy");  
        }  
        if(question==9)  
        {  
            l.setText("Que10: Which one among these is not a valid component?");  
            jb[0].setText("JButton");jb[1].setText("JList");jb[2].setText("JButtonGroup");  
                        jb[3].setText("JTextArea");  
        }  
        l.setBounds(30,40,450,20);  
        for(int i=0,j=0;i<=90;i+=30,j++)  
            jb[j].setBounds(50,80+i,200,20);  
    }  
    boolean check()  
    {  
        if(question==0)  
            return(jb[1].isSelected());  
        if(question==1)  
            return(jb[2].isSelected());  
        if(question==2)  
            return(jb[3].isSelected());  
        if(question==3)  
            return(jb[0].isSelected());  
        if(question==4)  
            return(jb[2].isSelected());  
        if(question==5)  
            return(jb[2].isSelected());  
        if(question==6)  
            return(jb[1].isSelected());  
        if(question==7)  
            return(jb[3].isSelected());  
        if(question==8)  
            return(jb[1].isSelected());  
        if(question==9)  
            return(jb[2].isSelected());  
        return false;  
    }
    
}
   